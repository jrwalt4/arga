{
    "exclude": [
        "archive",
        "node_modules",
        "build",
        "lib",
        "spec",
        ".vscode",
        ".git",
        "gulpfile.js",
        "src/not_used"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target":"es5",
        //"declaration": true,
        "outDir": "build",
        "lib": [
            "es2015.iterable",
            "es2015.core",
            "es5",
            "dom"
        ],
        "noEmitOnError": true,
        "sourceMap": false,
        //"listFiles": true,
        "noLib": false
    }
}